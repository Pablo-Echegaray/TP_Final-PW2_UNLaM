<main class="d-flex justify-content-center --bs-tertiary-color">
<fieldset class="my-5 p-4 w-50 bg-light rounded-4" style="height: max-content">
<legend class="text-center fw-bold">Editar pregunta</legend>

<form action="/TP_Final-PW2_UNLaM/user/updateQuestion" method="post" class="p-3">

    {{#pregunta}}
    <div class="d-flex flex-column">
        <div class="row mb-3">
            <label for="categoria" class="col-2 col-form-label">Categoría:</label>
            <input type='hidden' name='id_pregunta' value="{{id}}">
            
            <div class="col-sm-3">
                <select name="categoria" id="categoria" class="form-select" required>
                    {{#categorias}}
                        <option value="{{id}}" {{selected}}>{{value}}</option>
                    {{/categorias}}
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <label for="pregunta"  class="col-2 col-form-label">Pregunta:</label>
            <div class="col-10">
                <textarea name="descripcion" class="form-control">{{descripcion}}</textarea>
            </div>
        </div>
    {{/pregunta}}

    {{#respuestas}}
       <div class="row mb-3">
            <label class="col-2 col-form-label">Opción:</label>
            <div class="col-10">
                <textarea name="opcion[]" class="form-control">{{descripcion}}</textarea>
                <input type="hidden" name="respuestaId[]" value="{{id}}">
            </div>
        </div>
    {{/respuestas}}

        <div class="row mb-3">
            <label class="col-2 col-form-label" for="correcta">Correcta:</label>
            <div class="col-sm-3">
                <select class="form-select" name="correcta" id="correcta"required>
                    {{#opciones}}
                        <option value="{{value}}" {{selected}}>{{value}}</option>
                    {{/opciones}}
                </select>
            </div>
        </div>


    <div class="p-2 d-flex justify-content-center mq-boton">
        <a href="/TP_Final-PW2_UNLaM/" id="volver" name="volver" class="btn btn-secondary">Volver</a>
        <button type="submit" id="submit" name="submit" class="btn btn-success">Guardar</button>
    </div>

</form>
</div>
</fieldset>
</main>