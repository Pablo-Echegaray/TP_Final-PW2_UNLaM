<div class="contenedor">
 <section id="listadoPreguntas">
    <div class="contenedor-pregunta">
         
         <header>
             <span class="tema">{{categoria}}</span>

               <!-- BOTONES SEGUN LA PREGUNTA -->
                {{#activas}} <!-- el editor va a poder editar/inactivar preguntas -->
                <div class="opciones">
                    <form action="/TP_Final-PW2_UNLaM/user/editQuestion" method="post">
                        <input type="hidden" name="preguntaId" value="{{id}}">
                        <button type="submit"  class="btn btn-link">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </button>
                    </form>

                    <form action='/TP_Final-PW2_UNLaM/user/disapproveQuestion' method='post'>
                        <input type="hidden" name="preguntaId" value="{{id}}">
                        <button type='submit' class="btn btn-link">
                             <i class="fa-solid fa-circle-minus"></i>
                        </button>
                    </form>
                </div>
                {{/activas}}

                {{#sugeridas}} <!-- el editor va a poder aprobar/eliminar preguntas -->
                <div class="opciones">
                    <form action="/TP_Final-PW2_UNLaM/user/approveQuestion" method="post">
                        <input type="hidden" name="preguntaId" value="{{id}}">
                        <button type="submit"  class="btn btn-link">
                            <i class="fa-solid fa-check"></i>
                        </button>
                    </form>

                    <form action='/TP_Final-PW2_UNLaM/user/deleteQuestion' method='post'>
                        <input type="hidden" name="preguntaId" value="{{id}}">
                        <button type='submit' class="btn btn-link">
                             <i class="fa-solid fa-trash"></i>
                        </button>
                    </form>
                </div>
                {{/sugeridas}}

                {{#reportadas}}<!-- el editor va a poder aprobar/inactivar preguntas -->
                <div class="opciones">
                    <form action="/TP_Final-PW2_UNLaM/user/approveQuestion" method="post">
                        <input type="hidden" name="preguntaId" value="{{id}}">
                        <button type="submit"  class="btn btn-link">
                            <i class="fa-solid fa-check"></i>
                        </button>
                    </form>
                
                    <form action='/TP_Final-PW2_UNLaM/user/disapproveQuestion' method='post'>
                        <input type="hidden" name="preguntaId" value="{{id}}">
                        <button type='submit' class="btn btn-link">
                            <i class="fa-solid fa-circle-minus"></i>
                        </button>
                    </form>
                </div>
                {{/reportadas}}
        </header>
    
        <p class="pregunta">{{descripcion}}</p>
        
               {{#respuestas}}
